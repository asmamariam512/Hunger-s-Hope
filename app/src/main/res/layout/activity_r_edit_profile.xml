<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_r_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bac"
    tools:context="com.example.windows.foodish.rEditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/bac"
        android:orientation="vertical"
        android:id="@+id/linearLayout"

        >
        <TextView
            android:text="Welcome Home!"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/textView2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#94A09E"
            android:fontFamily="monospace"

            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/reciicon"
            android:id="@+id/imageButton1" />
    </LinearLayout>

    <Button
        android:text="Edit Profile"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center"
        android:id="@+id/edit"
        android:background="@drawable/bb"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableLeft="@drawable/pencil2"/>

    <Button
        android:text="Check Message"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/edit"
        android:background="@drawable/bb"
        android:layout_marginTop="10dp"
        android:id="@+id/imageButton4"
        android:drawableLeft="@drawable/msgg"/>

    <Button

        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:text="Log Out"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/imageButton4"
        android:background="@drawable/bb"
        android:drawableLeft="@drawable/logout"
        android:id="@+id/button3"  />



</RelativeLayout>
