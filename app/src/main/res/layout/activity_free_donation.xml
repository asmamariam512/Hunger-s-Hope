<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_free_donation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im4"


    tools:context="com.example.windows.foodish.FreeDonationActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bac"
        android:id="@+id/relativeLayout">

        <EditText
            android:textColor="#A9A19F"
            android:textColorHint="#A9A19F"
            android:layout_gravity="center"
            android:background="@drawable/edittextstyle"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"


            android:inputType="textPersonName"
            android:hint="Your Location"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:id="@+id/editText2"

            android:layout_below="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:textColor="#A9A19F"
            android:textColorHint="#A9A19F"
            android:layout_gravity="center"
            android:background="@drawable/edittextstyle"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"


            android:inputType="phone"
            android:ems="10"
            android:layout_marginTop="16dp"
            android:id="@+id/editText3"
            android:layout_below="@+id/editText2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Enter Your Contact Number" />

        <EditText
            android:textColor="#A9A19F"
            android:textColorHint="#A9A19F"
            android:layout_gravity="center"
            android:background="@drawable/edittextstyle"
            android:layout_width="320dp"
            android:layout_height="50dp"

            android:inputType="textPersonName"
            android:hint="Enter Your Name"
            android:ems="10"
            android:layout_marginTop="13dp"
            android:id="@+id/editText"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2" />
    </RelativeLayout>


    <TextView
        android:text="For"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_below="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"

        android:textSize="18dp"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"

        android:id="@+id/editText5"
        android:hint="Number Of People"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="People"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"

        android:textSize="18dp"
        android:layout_alignBottom="@+id/editText5"
        android:layout_marginLeft="230dp"
        android:layout_alignTop="@+id/textView3" />

    <TextView
        android:text="Find a Hunger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textColor="#14151A"
        android:fontFamily="monospace"
        android:layout_marginTop="49dp"
        android:textStyle="bold"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Choose An Area"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:id="@+id/editText4"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Button

        android:text="Find"
        android:textSize="18dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:textColor="#ffff"
        android:background="#14151A"
        android:elevation="24dp"
        android:layout_below="@+id/editText5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />


</RelativeLayout>
