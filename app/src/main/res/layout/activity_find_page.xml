<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.windows.foodish.FindPageActivity">
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">
    <RadioButton
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Karail Basti"

        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4"
        android:layout_below="@+id/checkBox2" />

    <RadioButton
        android:id="@+id/checkBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lalbag Basti"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="221dp"
        android:layout_above="@+id/mapbutton"
        android:layout_alignStart="@+id/textView19"
         />

    <RadioButton
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jaago Foundation"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="106dp"
        android:layout_below="@+id/radioGroup"
        android:layout_alignStart="@+id/checkBox4"
        android:layout_weight="0.83" />

</RadioGroup>




    <Button
        android:id="@+id/buttoncofirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#006994"
        android:elevation="3dp"
        android:text="Confirm"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="82dp" />

    <Switch

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/buttoncofirm"
        android:id="@+id/switch1"
        android:layout_alignTop="@+id/textView10" />

    <TextView
        android:text="Send Message to Receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000080"
        android:id="@+id/textView10"
        android:layout_above="@+id/buttoncofirm"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp" />

    <Button
        android:text="MAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapbutton"
        android:layout_above="@+id/textView10"
        android:layout_toStartOf="@+id/switch1"
        android:layout_marginBottom="43dp" />

    <TextView
        android:text="Search in the map by their name to see their exact location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:id="@+id/textView19"
        android:layout_above="@+id/mapbutton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />



</RelativeLayout>