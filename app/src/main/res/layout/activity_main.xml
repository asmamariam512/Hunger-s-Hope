<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"


    tools:context="com.example.windows.foodish.MainActivity">



    <Button
        android:clickable="true"
        android:text="Add a Hunger spot"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:id="@+id/button2"
        android:background="@drawable/button"
        android:drawableBottom="@drawable/rec"
        android:layout_alignTop="@+id/edit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="22sp"
        android:fontFamily="serif-monospace"
        android:textColor="#35617E"
        android:textStyle="bold"
        />

    <Button
        android:clickable="true"
        android:text="Want to donate?"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:id="@+id/edit"
        android:textColor="#35617E"

        android:textSize="22sp"
        android:fontFamily="serif-monospace"
        android:background="@drawable/button"
        android:drawableBottom="@drawable/don3"

        android:layout_below="@+id/viewPager"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>
    <Button
        android:clickable="true"
        android:text="Be a Volunteer?"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:id="@+id/button3"
        android:textColor="#35617E"

        android:textSize="22sp"
        android:fontFamily="serif-monospace"
        android:background="@drawable/button"
        android:drawableBottom="@drawable/vol"

        android:layout_below="@+id/edit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"/>

    <Button
        android:clickable="true"
        android:text="About Us!"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:id="@+id/button4"
        android:background="@drawable/button"
        android:drawableBottom="@drawable/bulb1"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="#35617E"
        android:layout_below="@+id/edit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v4.view.ViewPager>

    <TextView
        android:text="HUNGER'S HOPE"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"

        android:fontFamily="monospace"
        android:gravity="center"

        android:textColor="#FFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/textView2" />

</RelativeLayout>
